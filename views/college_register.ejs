<link rel="stylesheet" href="/css/register.css">
<link rel="stylesheet" href="/css/popup.css">
<link rel="stylesheet" href="/css/particles.css">


<style>
    .particles {
      height: 70rem;
    }
  
    @media(max-width:768px) {
      .particles {
        height: 100rem;
      }
    }
</style>

<div id="particles-js" class="particles"></div>

<div class="title_container">
    <h1 class="title">College Student Registration</h1>
</div>

<form action="/college_register_submit" method="post" class="form">
    <hr>
    <div class="column">        
        <div class="input-box">
            <label>Name<span> *</span></label>
            <input type="text" placeholder="Anbu A" name="name" required>
        </div>
        
        <div class="input-box">
            <label>Roll Number<span> *</span></label>
            <input type="text" placeholder="21IT101" name="rollno" required>
        </div>
    </div>
          
    <div class="column">
        <div class="input-box">
            <label>College Name <span> *</span></label>
            <input type="text" placeholder="Gobi Arts & Science College" name="college" required>
        </div>

        <div class="input-box">
            <label>Department Name <span> *</span> </label>
            <input type="text" placeholder="B.Sc(CS)" required name="department">
        </div>
    </div>   

    <div class="column">  
        <div class="input-box">
            <label for="standard" >Select Your Year <span> *</span></label>
            <div class="select-box">
               <select name="year" id="">
                <option value="1st year">1st year</option>
                <option value="2nd year">2nd year</option>
                <option value="3rd year">3rd year</option>
                <option value="4th year">4th year</option>
               </select>
            </div>
        </div>

        <div class="input-box">
            <label>Birth Date<span> *</span></label>
            <input type="date" placeholder="01/01/2003" name="dob" required >
        </div>
    </div>

    <div class="column">
        <div class="input-box">
            <label>Phone Number 1<span> *</span></label>
            <input type="number" placeholder="1234567890" required  name="phone1">
        </div>
        <div class="input-box">
            <label>Phone Number 2</label>
            <input type="number" placeholder="1234567890"  name="phone2">
        </div>
        
    </div>
                    
    <div class="column">
        <div class="input-box">
            <label>Email Address</label>
            <input type="text" placeholder="anbu@gmail.com" name="email">
        </div>
        <div class="input-box">
            <label for="gender" >Gender<span> *</span></label>
              <select name="gender" id="gender" class="select-box" required>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Special">Special</option>
              </select>
        </div>
    </div>
                    
    <input type="submit" class="button">
</form>

<% if(popup === 'display') { %>
    <div class="popup_container">
        <div class="popup">
            <h2>Form Submitted Successfully</h2>
            <a class="close" href="/college_register">&times;</a>
            <div class="content">
                Thank You for Your Registration!... We Meet You Soon!
                <h5>Follow this link to join my WhatsApp group</h5>
                <a href="https://chat.whatsapp.com/FD9J4h9Y47nIXV7A7zvPiC">https://chat.whatsapp.com/FD9J4h9Y47nIXV7A7zvPiC</a>
            </div>
        </div>
    </div>

    <script>
        document.body.style.overflow = 'hidden';
    </script>
<% } %>

