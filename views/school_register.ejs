<link rel="stylesheet" href="/css/register.css">
<link rel="stylesheet" href="/css/popup.css">
<link rel="stylesheet" href="/css/particles.css">


<style>
    .particles {
      height: 60rem;
    }
  
    @media(max-width:768px) {
      .particles {
        height: 90rem;
      }
    }
</style>

<div id="particles-js" class="particles"></div>

<div class="title_container">
    <h1 class="title">School Student Registration</h1>
</div>

<form action="/school_register_submit" method="post" class="form" id="form">
    <hr>
    <div class="column">        
        <div class="input-box">
            <label>Name<span> *</span></label>
            <input type="text" placeholder="Anbu A" name="name" id="name" required>
        </div>
        <div class="input-box">
            <label>School Name<span> *</span></label>
            <input type="text" placeholder="Goverment Higher Secondary School" name="school" id="school" required>
        </div>
    </div>
          
    <div class="column">
        <div class="input-box">
            <label>Birth Date<span> *</span></label>
            <input type="date" placeholder="01/01/2003" name="dob" id="dob" required>
        </div>
        <div class="input-box">
            <label for="standard" >Select Your Standard<span> *</span></label>
              <select name="standard" id="standard" class="select-box" required>
                  <option value="6th std">6th std</option>
                  <option value="7th std">7th std</option>
                  <option value="8th std">8th std</Coption>
                  <option value="9th std">9th std</option>
                  <option value="10th std">10th std</option>
                  <option value="11th std">11th std</option>
                  <option value="12th std">12th std</option>
              </select>
        </div>
    </div>   

    <div class="column">
        <div class="input-box">
            <label>Phone Number 1<span> *</span></label>
            <input type="number" placeholder="1234567890" name="phone1" id="phone1" required>
        </div>
        <div class="input-box">
            <label>Phone Number 2</label>
            <input type="number" placeholder="1234567890" name="phone2" id="phone2">
        </div>
    </div>
                    
    <div class="column">
        <div class="input-box">
            <label>Email Address</label>
            <input type="text" placeholder="anbu@gmail.com" name="email" id="email">
        </div>
        <div class="input-box">
            <label for="gender" >Gender<span> *</span></label>
            <select name="gender" id="gender" class="select-box" required>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Special">Special</option>
            </select>
        </div>
    </div>
                    
    <input type="submit" class="button">
</form>


<% if(popup === 'display') { %>
    <div class="popup_container">
        <input type="hidden" value="<%- popup %>" id="popup_id">
        <div class="popup">
            <h2>Form Submitted Successfully</h2>
            <a class="close" href="/school_register">&times;</a>
            <div class="content">
                Thank You for Your Registration!... We Meet You Soon!
                <h5>Follow this link to join my WhatsApp group</h5>
                <a href="https://chat.whatsapp.com/FD9J4h9Y47nIXV7A7zvPiC">https://chat.whatsapp.com/FD9J4h9Y47nIXV7A7zvPiC</a>
            </div>
        </div>
    </div>
    
    <script>
        document.body.style.overflow = 'hidden';
    </script>
<% } %>





